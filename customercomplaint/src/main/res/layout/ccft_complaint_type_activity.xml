<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cc_form_background_color">

    <include layout="@layout/ccf_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?android:actionBarSize"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/cc_form_ca_version_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/cc_form_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/ccf_select_complaint_type" />

            <RadioGroup
                android:id="@+id/cc_form_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/cc_form_technical_radio_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ccf_technical_complaint"
                    android:textColor="@color/cc_form_black_color"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/cc_form_operational_radio_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ccf_operational_complaint"
                    android:textColor="@color/cc_form_black_color"
                    android:textStyle="bold" />
            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:id="@+id/cc_form_technical_complaint_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/ccf_cardview_bg_color"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:gravity="center"
                        android:text="@string/ccf_technical_complaint"
                        android:textColor="@color/cc_form_black_color"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/cc_form_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/ccf_select_main_complaint_category" />

                    <!-- <androidx.appcompat.widget.AppCompatSpinner
                         android:id="@+id/cc_form_select_tech_main_category"
                         android:layout_width="match_parent"
                         android:layout_height="43dp"
                         android:layout_marginTop="20dp"
                         android:background="@drawable/cc_form_spinner_style"
                         android:entries="@array/cc_form_technical_complaint_category_type" />-->

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/cc_form_select_tech_main_category"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cc_form_spinner_style" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/cc_form_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/ccf_select_sub_category" />

                    <!-- <androidx.appcompat.widget.AppCompatSpinner
                         android:id="@+id/cc_form_select_tech_sub_category"
                         android:layout_width="match_parent"
                         android:layout_height="43dp"
                         android:layout_marginTop="20dp"
                         android:background="@drawable/cc_form_spinner_style" />-->
                    <!--<androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/cc_form_select_tech_sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cc_form_spinner_style"/>-->

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/cc_form_select_tech_sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:paddingStart="5dp"
                        android:layout_marginTop="20dp"
                        android:paddingEnd="15dp"
                        android:textSize="16sp"
                        android:background="@drawable/cc_form_spinner_style"
                        android:ellipsize="marquee"
                        android:gravity="start|center"
                        android:text="Select Sub Categories"
                        android:textColor="@color/cc_form_black_color" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cc_form_technical_proceed_btn"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/cc_form_rectangle_btn"
                        android:gravity="center"
                        android:text="@string/ccf_proceed"
                        android:textColor="@color/cc_form_white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cc_form_operational_complaint_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/ccf_cardview_bg_color"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:gravity="center"
                        android:text="@string/ccf_operational_complaint"
                        android:textColor="@color/cc_form_black_color"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/cc_form_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/ccf_select_main_complaint_category" />

                    <!--<androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/cc_form_select_oper_main_category"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cc_form_spinner_style"
                        android:entries="@array/cc_form_operational_complaint_category_type" />-->

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/cc_form_select_oper_main_category"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cc_form_spinner_style" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/cc_form_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/ccf_select_sub_category" />

                    <!-- <androidx.appcompat.widget.AppCompatSpinner
                         android:id="@+id/cc_form_select_oper_sub_category"
                         android:layout_width="match_parent"
                         android:layout_height="43dp"
                         android:layout_marginTop="20dp"
                         android:background="@drawable/cc_form_spinner_style"
                         android:entries="@array/cc_form_operational_sub_category_type" />-->

                   <!-- <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/cc_form_select_oper_sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/cc_form_spinner_style" />-->

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/cc_form_select_oper_sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:paddingStart="5dp"
                        android:layout_marginTop="20dp"
                        android:paddingEnd="15dp"
                        android:textSize="16sp"
                        android:background="@drawable/cc_form_spinner_style"
                        android:ellipsize="marquee"
                        android:gravity="start|center"
                        android:text="Select Sub Categories"
                        android:textColor="@color/cc_form_black_color" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cc_form_operational_proceed_btn"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/cc_form_rectangle_btn"
                        android:gravity="center"
                        android:text="@string/ccf_proceed"
                        android:textColor="@color/cc_form_white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cc_form_ca_version_code"
        style="@style/cc_form_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>