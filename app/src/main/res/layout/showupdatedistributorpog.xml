<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:id="@+id/rt1"
    android:padding="2dip" >
    <View android:layout_width="fill_parent" android:id="@+id/focus_view" android:layout_height="0dp"
        android:focusable="true" android:focusableInTouchMode="true"><requestFocus/></View>

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/txtprdname"
            android:layout_width="60sp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hint="PRODUCT NAME"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="9sp"
           android:textStyle="bold"
            android:lines="4"

            />
        <TextView

            android:id="@+id/txtprdcode"
            android:layout_width="0dp"
            android:layout_height="1dp"

            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:hint="PRODUCT NAME"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="9sp"
            android:textStyle="bold"
            android:lines="4"
            android:visibility="invisible"

            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />
        <EditText

            android:id="@+id/lblplan"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="PKT"
            android:background="@drawable/mystyles"
            android:inputType="numberSigned"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />
        <EditText
            android:gravity="center"
            android:id="@+id/lblreceivedfrmdepo"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="10"

            android:hint="PKT"
            android:background="@drawable/mystyles"
            android:inputType="numberSigned"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />
        <EditText

            android:id="@+id/lblreceivedfrmdistr"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="PKT"
            android:background="@drawable/mystyles"
            android:inputType="numberSigned"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />

        <EditText

            android:id="@+id/lblshipttodistr"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"


            android:scrollbars="vertical"
            android:hint="PKT"
            android:text=""
            android:layout_width="60sp"
            android:background="@drawable/mystyles"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />


        <EditText
            android:gravity="center"
            android:id="@+id/lblnetstock"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="PKT"
            android:background="@drawable/mystyles"
            android:inputType="numberSigned"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />
        <EditText
            android:gravity="center"
            android:id="@+id/lblbalgoddown"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="PKT"
            android:background="@drawable/mystyles"
            android:inputType="numberSigned"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />
        <EditText
            android:gravity="center"
            android:id="@+id/lblplacement"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="PKT"
            android:background="@drawable/mystyles"
            android:inputType="numberSigned"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/QRCodeBlackColor" />

        <Button
            android:id="@+id/btnnext"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="NEXT"
            android:textSize="10sp"
            android:textColor="#fff"
            android:background="@color/Username"

            />



    </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>