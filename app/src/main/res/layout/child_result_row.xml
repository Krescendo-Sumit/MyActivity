<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="visible"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llLeaveDetailsText"
                android:layout_width="match_parent"
              android:padding="10dp"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <TextView
                    android:id="@+id/txtLeaveTypeTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Leave Type"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtAbsenceDaysTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"


                    android:text="Absence Days"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtReasonTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    android:text="Reason"
                    android:textSize="10sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtStatusTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    android:text="Status"
                    android:textSize="10sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLeavePeriodTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    android:text="Action"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/llLeaveDetailsText"
                android:background="@color/cardview_dark_background" />

            <LinearLayout
                android:id="@+id/llLeaveDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:layout_below="@+id/llLeaveDetailsText"
                android:weightSum="5">

                <TextView
                    android:id="@+id/txtLeaveType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:gravity="center_horizontal"
                    android:text="1785" />


                <TextView
                    android:id="@+id/txtAbsenceDays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:text="20" />

                <TextView
                    android:id="@+id/txtReason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:text="Issues for health and other issues" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="Pending" />

                <!--<TextView-->
                <!--android:id="@+id/txtLeavePeriod"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:paddingTop="10dp"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:text="4 Days"-->
                <!--/>-->


                <Button
                    android:id="@+id/btnAction"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_button_bg"
                    android:gravity="center"
                    android:text="PULL OUT"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="visible"

                    />

            </LinearLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>