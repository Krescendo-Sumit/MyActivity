<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="1dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="2dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/wallet_bright_foreground_holo_dark"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/relRowRetailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="7"
                android:columnCount="3"
                >
                <!--DISTRICT -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISTRICT : "
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="0.2"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:padding="5dp"

                    />
                <TextView
                    android:id="@+id/txtDist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="0.5"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:visibility="visible"
                    android:inputType="textVisiblePassword"

                    />

                 <!--TALUKA-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TALUKA : "
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="0.2"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/txtTaluka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="0.5"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:ems="5"

                    android:visibility="visible"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    />


                <!--RETAILER FIRM NAME-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RETAILER FIRM NAME :"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_columnWeight="0.2"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:padding="5dp"


                    />
                <TextView
                    android:id="@+id/txtFirmName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_columnWeight="0.5"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:ellipsize="end"
                    android:ems="8"
                    android:visibility="visible"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    />


                <!--MOBILE NUMBER -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE NUMBER :"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_columnWeight="0.2"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:padding="5dp"


                    />
                <TextView
                    android:id="@+id/txtMobNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_columnWeight="0.5"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:ems="5"
                    android:visibility="visible"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    />



                <!--RETAILER TYPE  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RETAILER TYPE  : "
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_columnWeight="0.2"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:padding="5dp"

                    />
                <TextView
                    android:id="@+id/txtRetailerType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_columnWeight="0.5"
                    android:textColor="@color/QRCodeBlackColor"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:ems="5"
                    android:visibility="visible"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    />



            </GridLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>
