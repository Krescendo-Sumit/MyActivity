<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddFarmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/wallet_bright_foreground_holo_dark"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/lblSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="SNO :"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblSNo"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lblCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="CROP :"
                android:layout_marginTop="8dp"
                android:layout_below="@id/txtSNo"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblCrop"
                android:layout_below="@id/txtSNo"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lblProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblCrop"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:text="PRODUCT PURCHASED :"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCrop"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblProductName"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblQtyNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblProductName"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="QTY / PKTS PURCHASED  :"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtQtyNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductName"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblQtyNo"
                android:text=""
                android:inputType="numberDecimal"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/grey"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_check"
                android:tint="@color/colorPrimary"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_pen_on_square_of_paper_interface_symbol"
                android:tint="@color/colorPrimary"
                android:visibility="visible" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>







