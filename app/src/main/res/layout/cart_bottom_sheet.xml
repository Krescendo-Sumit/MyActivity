<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <!--app:layout_behavior="android.support.design.widget.BottomSheetBehavior">-->

    <TextView
        android:id="@+id/text_order_detailss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Amount Details"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgArrowBottom"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/text_order_detailss"
        android:rotation="270"
        android:src="@drawable/arrow" />


    <TextView
        android:id="@+id/txt_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_order_detailss"
        android:gravity="center"
        android:padding="7dp"
        android:text="Total"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_total_with_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_order_detailss"
        android:drawablePadding="7dp"

        android:drawableRight="@drawable/ruppee"
        android:gravity="center"
        android:layout_marginBottom="3dp"

        android:padding="7dp"

        android:text="0"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_order_action"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/txt_total_with_tax"
        android:background="@color/colorPrimary"
        android:text="DEPOSIT AMOUNT FOR SELECTED FARMERS"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="visible"

        />
</RelativeLayout>
