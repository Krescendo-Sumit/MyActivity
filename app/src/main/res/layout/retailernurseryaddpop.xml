                    <!--                        android:id="@+id/sp_distributorretailer"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="40dp"-->
                    <!--                        android:entries="@array/sk_cata_farmer"-->

                    <!--  /> -->

                    <myactvity.mahyco.app.MultiSelectionSpinner
