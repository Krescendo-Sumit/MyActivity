                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:text=" MOBILE NUMBER "
                android:textColor="@color/QRCodeBlackColor"
                android:textStyle="bold" />

            <EditText
