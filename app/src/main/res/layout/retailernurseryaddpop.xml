                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="Other"
                                android:textColor="@color/QRCodeBlackColor" />


                            <EditText
                                android:id="@+id/et_othername"
                                android:text="Other"
                                android:layout_width="60dp"
