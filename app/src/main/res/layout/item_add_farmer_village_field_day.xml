<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddFarmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/wallet_bright_foreground_holo_dark"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/lblSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="S.NO.:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblSNo"
                android:text="4584144"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lblVillageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblSNo"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:text="VILLAGE NAME :"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtVillageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSNo"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblVillageName"
                android:text="VILLAGE NAME"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblFarmerNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblVillageName"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="NO. OF FARMERS :"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtFarmerNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVillageName"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblFarmerNo"
                android:text=" NO. OF FARMERS"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:visibility="visible"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtFarmerNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVillageName"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblFarmerNo"
                android:hint="Enter Farmers"
                android:visibility="gone"
                android:inputType="number"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="normal" />



            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_check"
                android:tint="@color/colorPrimary"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_pen_on_square_of_paper_interface_symbol"
                android:tint="@color/colorPrimary"
                android:visibility="visible" />












        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>







