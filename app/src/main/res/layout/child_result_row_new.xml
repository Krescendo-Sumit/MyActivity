<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="visible"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtLeaveTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/QRCodeBlackColor"
                android:text="Leave Type :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAbsenceDaysTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLeaveTypeTxt"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/QRCodeBlackColor"


                android:layout_marginRight="5dp"

                android:gravity="center_horizontal"
                android:text="Absence Days :"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtReasonTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAbsenceDaysTxt"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/QRCodeBlackColor"

                android:textSize="15sp"

                android:gravity="center_horizontal"

                android:text="Reason :"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtReasonTxt"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                android:text="Status :"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="15sp"

                android:textStyle="bold" />

            <!--<TextView-->
            <!--android:id="@+id/txtActionTxt"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/txtStatusTxt"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="Action :"-->
            <!--android:layout_marginRight="5dp"-->

            <!--android:textStyle="bold" />-->


            <TextView
                android:id="@+id/txtLeaveType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtLeaveTypeTxt"
                android:gravity="center_horizontal"
                android:textSize="15sp"

                android:text="1785" />


            <TextView
                android:id="@+id/txtAbsenceDays"
                android:layout_width="wrap_content"
                android:textSize="15sp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLeaveTypeTxt"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/txtAbsenceDaysTxt"
                android:gravity="center_horizontal"
                android:text="20" />

            <TextView
                android:id="@+id/txtReason"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAbsenceDaysTxt"
                android:layout_marginTop="5dp"
                android:textSize="15sp"

                android:layout_toRightOf="@+id/txtReasonTxt"
                android:gravity="center_horizontal"
                android:text="Issues for health and other issues" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/txtReasonTxt"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/txtStatusTxt"
                android:gravity="center"
                android:text="Pending" />


            <Button
                android:id="@+id/btnAction"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/txtStatusTxt"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/gradient_pullout_button_bg"
                android:gravity="center"
                android:text="PULL OUT"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:visibility="visible" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
