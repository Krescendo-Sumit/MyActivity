<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- Scrollable Content below header and above footer -->

    <!-- Content below header and above footer -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:gravity="center">
        <ScrollView

            android:id="@+id/container2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblgeoststus"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="STATE"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_month5"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:elevation="1dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="20dp">

                        <myactvity.mahyco.helper.SearchableSpinner
                            android:id="@+id/spState"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="DISTRICT"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_month2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:elevation="1dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="20dp">

                        <myactvity.mahyco.helper.SearchableSpinner
                            android:id="@+id/spDist"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/lbltaluka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="TALUKA"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_Taluka"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:elevation="1dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="20dp">

                        <myactvity.mahyco.helper.SearchableSpinner
                            android:id="@+id/spTaluka"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"


                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/lblmakt"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="MARKET PLACE"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtmarketplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="TYPE HERE"

                        android:maxLength="100"

                        />


                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="RETAILER FIRM NAME(from master list)"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_month"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:elevation="1dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="20dp">

                        <myactvity.mahyco.helper.SearchableSpinner
                            android:id="@+id/spnewretailer"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="NEW RETAILER FIRM NAME(not in master list)"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtfirmname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="TYPE HERE"
                        android:maxLength="100" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="RETAILER DETAIL"
                        android:textColor="@color/Username"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:text="RETAILER NAME"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtrtname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:hint="TYPE HERE"
                            android:maxLength="100" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/txtmobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="6dp"
                                    android:ems="10"
                                    android:hint="MOBILE NUMBER"

                                    android:inputType="number"
                                    android:maxLength="10"

                                    />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/txtmobilewhatup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginRight="6dp"
                                    android:ems="10"
                                    android:hint="WHATSAPP  NUMBER"
                                    android:inputType="number"
                                    android:maxLength="10"

                                    />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                >

                                <EditText
                                    android:id="@+id/txtBirthdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="6dp"
                                    android:ems="10"
                                    android:focusableInTouchMode="true"
                                    android:hint="DOB - DD/MM/YYYY"
                                    android:digits="0123456789/"
                                    android:inputType="date|text"


                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/txtAge"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="6dp"
                                    android:ems="10"
                                    android:hint="AGE"
                                    android:inputType="number"

                                    android:maxLength="2"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                            <CheckBox
                                android:id="@+id/chktag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="GEO TAG"
                                android:textColor="@color/QRCodeBlackColor"></CheckBox>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp">

                            <EditText
                                android:id="@+id/txtyearofexperiance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"

                                android:hint="YEARS OF EXPERIENCE IN SEED BUSINESS"
                                android:imeOptions="actionUnspecified"
                                android:inputType="number"
                                android:maxLength="2"
                                android:maxLines="1"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="ASSOCIATED DISTRIBUTOR'S NAME"
                        android:textColor="@color/Username"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:text="MAHYCO DISTRIBUTOR'S NAME"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_month7"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:elevation="1dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="20dp">

                            <myactvity.mahyco.app.MultiSelectionSpinner
                                android:id="@+id/spdistr"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            >

                            <EditText
                                android:id="@+id/txtotherdistributor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:ems="10"
                                android:hint="OTHER COMPANY DISTRIBUTORS NAME"
                                android:inputType="text"
                                android:maxLength="50" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="IS HE A KEY RETAILER OF MAHYCO"
                            android:textColor="@color/Username"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radGrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rndYes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="YES"
                                android:textColor="@color/QRCodeBlackColor" />

                            <RadioButton
                                android:id="@+id/rndNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="NO"
                                android:textColor="@color/QRCodeBlackColor" />
                        </RadioGroup>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="PRODUCT DETAILS"
                        android:textColor="@color/Username"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/chkmahycoproduct"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="ADD MAHYCO PRODUCT"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"></CheckBox>

                        <CheckBox
                            android:id="@+id/chkotherprd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:text="ADD OTHER COMPANY PRODUCT"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="BUSINESS OTHER THAN SEEDS"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textStyle="bold" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_month9"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:elevation="1dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="20dp">


                        <myactvity.mahyco.app.MultiSelectionSpinner
                            android:id="@+id/spBussiness"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <CheckBox
                            android:id="@+id/chkfirti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FERTILIZERS"
                            android:textColor="@color/Username"></CheckBox>

                        <CheckBox
                            android:id="@+id/chkpesti"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="PESTICIDES"
                            android:textColor="@color/Username"></CheckBox>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <CheckBox
                            android:id="@+id/chkfarm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FARM MACHINERY"
                            android:textColor="@color/Username"></CheckBox>

                        <CheckBox
                            android:id="@+id/chkother"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="OTHER"
                            android:textColor="@color/Username"></CheckBox>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txtComments"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:hint="COMMENTS (ANY KEY INFORMATION ABOUT RETAILER)"
                            android:inputType="text"
                            android:maxLength="50" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="IS HE A AUTHORIZED DISTRIBUTOR FOR OTHER SEED COMPANIES"
                            android:textColor="@color/Username"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radGrp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rndYes2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="YES"
                                android:textColor="@color/QRCodeBlackColor" />

                            <RadioButton
                                android:id="@+id/rndNo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="NO"
                                android:textColor="@color/QRCodeBlackColor" />
                        </RadioGroup>
                    </LinearLayout>




                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </ScrollView>
    </RelativeLayout>


    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:gravity="center">
        <LinearLayout
            android:id="@+id/footer1"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="#ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/btn_shape"
                android:text="Submit"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
