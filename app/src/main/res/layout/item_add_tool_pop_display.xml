<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddFarmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/wallet_bright_foreground_holo_dark"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <!--Serial no-->
            <TextView
                android:id="@+id/lblSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="S.NO.:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtSNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblSNo"
                android:text="4584144"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />


        <!--For tool category-->
            <TextView
                android:id="@+id/lblCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblSNo"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:text="CATEGORY : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSNo"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblCategory"
                android:text="CATEGORY"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        <!--For crop type-->

            <TextView
                android:id="@+id/lblCropType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblCategory"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:text="CROP TYPE : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtCropType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCategoryName"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblCropType"

                android:text="CROP TYPE"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        <!--For product name-->
            <TextView
                android:id="@+id/lblProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblCropType"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:text="PRODUCT NAME : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCropType"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblProductName"

                android:text="PRODUCT NAME"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        <!--For Number of posters/ leaflet , bunting and others -->
            <TextView
                android:id="@+id/lblNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductName"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/no_of_posters"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductName"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblNum"
                android:text=" NUMBER"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:visibility="visible"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProductName"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblNum"
                android:hint="Enter numbers"
                android:visibility="gone"
                android:inputType="number"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="normal" />


        <!--For Tool name-->
            <TextView
                android:id="@+id/lblToolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblNum"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="TOOL NAME : "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txtToolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblNum"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblToolName"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="12sp"
                android:visibility="gone"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtToolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNum"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/lblToolName"
                android:hint="Enter tool name"
                android:visibility="gone"
                android:inputType="number"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="normal" />


            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_check"
                android:tint="@color/colorPrimary"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_pen_on_square_of_paper_interface_symbol"
                android:tint="@color/colorPrimary"
                android:visibility="gone" />












        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>







