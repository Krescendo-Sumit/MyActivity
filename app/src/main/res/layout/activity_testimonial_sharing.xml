<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient"
            android:elevation="10dp">

            <TextView
                android:id="@+id/lblheader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SHARING TESTIMONIAL/ PRODUCT VIDEO/ POSTCARD/ GREETINGS"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"

                />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Appbar"
        android:clickable="true"
        android:fadeScrollbars="false">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <!--Select individual farmer/ group farmer-->
                    <RadioGroup
                        android:id="@+id/radGroupActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/radIndividualFarmer"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="INDIVIDUAL FARMER" />

                        <RadioButton
                            android:id="@+id/radGroupFarmer"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="GROUP OF FARMERS"

                            />
                    </RadioGroup>

                    <!-- for group farmer-->
                    <LinearLayout
                        android:id="@+id/llGrpFarmer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!--DETAILS OF SHARED CONTENT-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/gradient"
                            android:text="DETAILS OF SHARED CONTENT"
                            android:textColor="@color/QRCodeWhiteColor"
                            android:textStyle="bold"
                            android:padding="5dp"
                            />


                        <!--SELECT MODE OF SHARING-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:text="MODE OF SHARING *"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:elevation="1dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="20dp">

                            <myactvity.mahyco.helper.SearchableSpinner
                                android:id="@+id/spSharingMode"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </androidx.cardview.widget.CardView>


                        <!-- FARMER GROUP NAME-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tisummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etFarmerGrpName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="FARMER GROUP NAME *"
                                android:inputType="textCapWords"
                                android:maxLength="50"
                                android:textAllCaps="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!--NO. OF FARMERS-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etFarmerNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="NO. OF FARMERS *"
                                android:inputType="number"
                                android:maxLength="50"
                                android:textAllCaps="true" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <!--SELECT SHARED CONTENT-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:text="SHARED CONTENT *"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:elevation="1dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="20dp">

                            <myactvity.mahyco.helper.SearchableSpinner
                                android:id="@+id/spSharedContent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </androidx.cardview.widget.CardView>

                        <!--Other option-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiOtherGrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/etOther"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="ENTER OTHER SHARED CONTENT *"
                            android:textColorHint="@color/grey"
                            android:inputType="textCapWords"
                            android:maxLength="50"
                            android:textAllCaps="true"
                            />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- crop and product-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="2dp"
                                    android:text="SELECT CROP *"
                                    android:textColor="@color/QRCodeBlackColor"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:elevation="1dp"
                                    android:innerRadius="0dp"
                                    android:shape="ring"
                                    android:thicknessRatio="1.9"
                                    app:cardCornerRadius="20dp"

                                    >

                                    <myactvity.mahyco.app.MultiSelectionSpinner
                                        android:id="@+id/spCropType"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="2dp"
                                    android:text="SELECT PRODUCT *"
                                    android:textColor="@color/QRCodeBlackColor"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:elevation="1dp"
                                    android:innerRadius="0dp"
                                    android:shape="ring"
                                    android:thicknessRatio="1.9"
                                    app:cardCornerRadius="20dp">

                                    <myactvity.mahyco.app.MultiSelectionSpinner
                                        android:id="@+id/spProductName"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"

                                        />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <!-- for individual farmer-->
                    <LinearLayout
                        android:id="@+id/llIndividualFarmer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">



                        <LinearLayout
                            android:id="@+id/memberSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:weightSum="3">

                            <EditText
                                android:id="@+id/etName"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="#EFEFF7"
                                android:gravity="center"
                                android:hint="Farmer name"
                                android:inputType="textCapWords"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@color/grey" />

                            <EditText
                                android:id="@+id/etMob"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="#EFEFF7"
                                android:gravity="center"
                                android:hint="Mobile no."
                                android:inputType="phone"
                                android:maxLength="10"
                                android:textColor="@android:color/black"
                                android:textColorHint="@color/grey" />


                            <Button
                                android:id="@+id/btnSearch"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"

                                android:layout_weight="1"
                                android:background="@drawable/gradient_button_bg"
                                android:gravity="center"
                                android:text="Search"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <!--DETAILS OF SHARED CONTENT-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/gradient"
                            android:padding="5dp"
                            android:text="DETAILS OF SHARED CONTENT"
                            android:textColor="@color/QRCodeWhiteColor"
                            android:textStyle="bold" />

                        <!--SELECT SHARED CONTENT-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:text="SHARED CONTENT *"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:elevation="1dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="20dp">

                            <myactvity.mahyco.helper.SearchableSpinner
                                android:id="@+id/spSharedContentIndi"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </androidx.cardview.widget.CardView>

                        <!--Other option-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tiOtherIndi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/etOther1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="ENTER THE OTHER SHARED CONTENT *"
                            android:inputType="textCapWords"
                            android:maxLength="50"
                            android:textAllCaps="true"
                            />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- crop and product-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="2dp"
                                    android:text="SELECT CROP *"
                                    android:textColor="@color/QRCodeBlackColor"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:elevation="1dp"
                                    android:innerRadius="0dp"
                                    android:shape="ring"
                                    android:thicknessRatio="1.9"
                                    app:cardCornerRadius="20dp"

                                    >

                                    <myactvity.mahyco.app.MultiSelectionSpinner
                                        android:id="@+id/spCropTypeIndi"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="2dp"
                                    android:text="SELECT PRODUCT *"
                                    android:textColor="@color/QRCodeBlackColor"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:elevation="1dp"
                                    android:innerRadius="0dp"
                                    android:shape="ring"
                                    android:thicknessRatio="1.9"
                                    app:cardCornerRadius="20dp">

                                    <myactvity.mahyco.app.MultiSelectionSpinner
                                        android:id="@+id/spProductNameIndi"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"

                                        />
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                        </LinearLayout>

                        <!--FARMER DETAILS-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/gradient"
                            android:padding="5dp"
                            android:text="FARMER DETAILS"
                            android:textColor="@color/QRCodeWhiteColor"
                            android:textStyle="bold" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:columnCount="2"
                            android:rowCount="5"
                            android:visibility="visible"
                            >


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="0.5"
                                android:layout_gravity="center_vertical"
                                android:text="STATE :"
                                android:textColor="@color/QRCodeBlackColor"
                                android:textStyle="bold"

                                />

                            <TextView
                                android:id="@+id/txtState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/QRCodeBlackColor"
                                android:layout_columnWeight="3"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:text="DISTRICT :"
                                android:textColor="@color/QRCodeBlackColor"
                                android:textStyle="bold"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnWeight="0.5"


                                />

                            <TextView
                                android:id="@+id/txtDist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/QRCodeBlackColor"
                                android:layout_columnWeight="3"
                                android:layout_row="1"
                                android:layout_marginTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:text="TALUKA :"
                                android:textColor="@color/QRCodeBlackColor"
                                android:textStyle="bold"
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_columnWeight="0.5"

                                />
                            <TextView
                                android:id="@+id/txtTaluka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/QRCodeBlackColor"
                                android:layout_columnWeight="3"
                                android:layout_row="2"
                                android:layout_marginTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:text="FOCUS VILLAGE :"
                                android:textColor="@color/QRCodeBlackColor"
                                android:textStyle="bold"
                                android:layout_row="3"
                                android:layout_column="0"
                                android:layout_columnWeight="0.5"

                                />
                            <TextView
                                android:id="@+id/txtFocussedVillage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/QRCodeBlackColor"
                                android:layout_columnWeight="3"
                                android:layout_row="3"
                                android:layout_marginTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:text="OTHER VILLAGE :"
                                android:textColor="@color/QRCodeBlackColor"
                                android:textStyle="bold"
                                android:layout_row="4"
                                android:layout_column="0"
                                android:layout_columnWeight="0.5"

                                />
                            <TextView
                                android:id="@+id/txtOtherVillage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/QRCodeBlackColor"
                                android:layout_columnWeight="3"
                                android:layout_row="4"
                                android:layout_marginTop="5dp"
                                />





                        </GridLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <EditText
                                    android:id="@+id/etArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:hint="TOTAL LAND (IN ACRE) *"
                                    android:inputType="numberDecimal"
                                    android:maxLength="4"
                                    android:textAllCaps="true" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="CROP GROWN BY FARMER *"
                                        android:textColor="@color/QRCodeBlackColor"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="1dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="1dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:elevation="1dp"
                                        android:innerRadius="0dp"
                                        android:shape="ring"
                                        android:thicknessRatio="1.9"
                                        app:cardCornerRadius="20dp"

                                        >

                                        <myactvity.mahyco.app.MultiSelectionSpinner
                                            android:id="@+id/spCropGrown"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="2dp"
                                        android:text="PRODUCT USED BY FARMER *"
                                        android:textColor="@color/QRCodeBlackColor"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="1dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="1dp"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:elevation="1dp"
                                        android:innerRadius="0dp"
                                        android:shape="ring"
                                        android:thicknessRatio="1.9"
                                        app:cardCornerRadius="20dp">

                                        <myactvity.mahyco.app.MultiSelectionSpinner
                                            android:id="@+id/spProductUsed"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"

                                            />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                            </LinearLayout>


                    </LinearLayout>


                    <!--Submit-->
                    <Button
                        android:id="@+id/btnSubmit"
                        style="@style/Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnTakePhoto"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_shape"
                        android:text="SUBMIT"
                        android:textColor="#fff" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relPRogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardMdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ProgressBar
                    android:id="@+id/myProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/headerAction"
                    android:indeterminateTintMode="src_atop"
                    android:visibility="visible"

                    />

                <TextView
                    android:id="@+id/myTextProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/myProgress"
                    android:background="@android:color/transparent"
                    android:text="Uploading Data"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>

