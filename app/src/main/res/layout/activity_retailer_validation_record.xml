<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient"
            android:elevation="10dp">

            <TextView
                android:id="@+id/lblheader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="RETAILER RECORDED DATA"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"

                />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Appbar"
        android:clickable="true"
        android:fadeScrollbars="false">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridLayout
                        android:id="@+id/gridView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="20"
                        android:columnCount="3"
                        >
                        <!--RETAILER NAME -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RETAILER NAME  : "
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"

                            />
                        <TextView
                            android:id="@+id/txtRetailerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="10"
                            android:visibility="visible"
                            android:inputType="textVisiblePassword"

                            />


                        <!--RETAILER FIRM NAME -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RETAILER FIRM NAME : "
                            android:layout_row="2"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"
                            />
                        <TextView
                            android:id="@+id/txtRetailerfirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="5"

                            android:visibility="visible"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            />


                        <!--MOBILE NUMBER -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MOBILE NUMBER  :"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"


                            />
                        <TextView
                            android:id="@+id/txtMobileNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="5"
                            android:visibility="visible"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            />


                        <!--RETAILER TYPE-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RETAILER TYPE :"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"


                            />
                        <TextView
                            android:id="@+id/txtRetailerType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_row="4"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="8"
                            android:visibility="visible"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            />



                        <!--DISTRICT -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DISTRICT :"
                            android:layout_row="5"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"


                            />
                        <TextView
                            android:id="@+id/txtDist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="5"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="5"
                            android:visibility="visible"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            />


                        <!--TALUKA  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TALUKA : "
                            android:layout_row="6"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"

                            />
                        <TextView
                            android:id="@+id/txtTaluka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="6"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="5"
                            android:visibility="visible"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            />


                        <!--CALL INITIATED BY (MDO)-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL INITIATED BY (KA) :"
                            android:layout_row="8"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"


                            />
                        <TextView
                            android:id="@+id/txtCallInitiateBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="8"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="5"
                            android:visibility="visible"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            />

                        <!--CALL INITIATED ON-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL INITIATED ON :"
                            android:layout_row="9"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"


                            />
                        <TextView
                            android:id="@+id/txtCallInitiateOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="9"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:ems="5"
                            android:visibility="visible"
                            android:inputType="textNoSuggestions|textVisiblePassword"
                            />

                        <!--CALL TYPE-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL TYPE :"
                            android:layout_row="10"
                            android:layout_column="0"
                            android:layout_columnWeight="0.2"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="5dp"


                            />
                        <TextView
                            android:id="@+id/txtCallType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_row="10"
                            android:layout_column="1"
                            android:layout_columnWeight="0.5"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:ellipsize="end"
                            android:ems="10"
                            android:visibility="visible"
                            />

                    </GridLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gridView"
                        android:orientation="vertical">


                        <!-- crop and product-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="2dp"
                                    android:text="SELECT CROP DISCUSSED *"
                                    android:textColor="@color/QRCodeBlackColor"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:elevation="1dp"
                                    android:innerRadius="0dp"
                                    android:shape="ring"
                                    android:thicknessRatio="1.9"
                                    app:cardCornerRadius="20dp"

                                    >

                                    <myactvity.mahyco.app.MultiSelectionSpinner
                                        android:id="@+id/spCropType"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="2dp"
                                    android:text="SELECT PRODUCT DISCUSSED *"
                                    android:textColor="@color/QRCodeBlackColor"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:elevation="1dp"
                                    android:innerRadius="0dp"
                                    android:shape="ring"
                                    android:thicknessRatio="1.9"
                                    app:cardCornerRadius="20dp">

                                    <myactvity.mahyco.app.MultiSelectionSpinner
                                        android:id="@+id/spProductName"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"

                                        />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>




                        <!--Select retailer response-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="13"
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:text="RETAILER RESPONSE *"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_row="14"
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:elevation="1dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="20dp"

                            >

                            <myactvity.mahyco.helper.SearchableSpinner
                                android:id="@+id/spRetailerResponse"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </androidx.cardview.widget.CardView>

                        <!-- Call summary -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tisummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_row="15"
                            android:layout_columnSpan="2">

                            <EditText
                                android:id="@+id/etCallSummary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="SUMMARY OF THE CALL (REMARKS) *"
                                android:inputType="textCapWords"
                                android:maxLength="50"
                                android:textAllCaps="true" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <!--STATUS-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="17"
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:text="STATUS *"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_row="18"
                            android:layout_column="0"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:elevation="1dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="20dp">

                            <myactvity.mahyco.helper.SearchableSpinner
                                android:id="@+id/spStatus"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"

                                />
                        </androidx.cardview.widget.CardView>

                        <!--REMARKS BY VALIDATOR-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_row="11"
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_marginTop="5dp">

                            <EditText
                                android:id="@+id/etRemark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="REMARKS BY VALIDATOR*"
                                android:textAllCaps="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!--VALIDATION DATE-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="13"
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:text="VALIDATION DATE *"
                            android:textColor="@color/QRCodeBlackColor"
                            android:textStyle="bold" />


                        <!--                    <android.support.design.widget.TextInputLayout-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:layout_row="12"-->
                        <!--                        android:layout_column="0"-->
                        <!--                        android:layout_columnSpan="2"-->
                        <!--                        android:layout_marginTop="5dp">-->

                        <TextView
                            android:id="@+id/etValidateDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:textAllCaps="true"
                            android:hint="Select Date"
                            android:layout_marginBottom="5dp"
                            />

                        <!--                    </android.support.design.widget.TextInputLayout>-->
                        <!--Submit-->
                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/btn_shape"
                            android:text=" submit "
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            />
                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/relPRogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardMdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ProgressBar
                    android:id="@+id/myProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/headerAction"
                    android:indeterminateTintMode="src_atop"
                    android:visibility="visible"

                    />

                <TextView
                    android:id="@+id/myTextProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/myProgress"
                    android:background="@android:color/transparent"
                    android:text="Uploading Data"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>

