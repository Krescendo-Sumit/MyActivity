<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true"   android:width="35dp" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F78500" />
            <gradient android:angle="-90" android:startColor="#F78500" android:endColor="#F78500"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F78500" />
            <solid android:color="#F78500"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F78500" />
            <gradient android:angle="-90" android:startColor="#F78500" android:endColor="#F78500" />
        </shape>
    </item>
</selector>